@using WebApplication1.Models;
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        border: 1px solid #808080;
        width: 100%;
        
    }
        table th {
            border: 1px solid #808080;
            position: sticky;
            top: 0;
            background-color: #f2f2f2; /* Add a background color to the header for better visibility */
            z-index: 1;
        }
    table tr td, table tr th{
        border: 1px solid #808080;
    }
   
    .clsTrContent:hover{
        background: #4cff00;
    }
    #dvTableBorder{
        height: 200px;
        width: 350px;
        overflow:auto;
        border: 1px solid #000000;
    }
</style>

@{
    List<BaseEquipment> pListData = (List<BaseEquipment>)ViewBag.plstData;
    <div id="dvTableBorder">
        <h4>Equipment List</h4>
        <table>
            <tr>
                <th>Name</th>
                <th>EcCount</th>
                <th>EntryDate</th>
            </tr>

            @foreach (var item in pListData)
            {
                <tr class="clsTrContent">
                    <td>@item.Name</td>
                    <td>@item.EcCount</td>
                    <td>@item.EntryDate.ToString()</td>
                </tr>
            }
        </table>
    </div>
    
}



